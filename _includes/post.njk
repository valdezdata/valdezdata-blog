---
layout: base.njk
---

<article class="post">
  <h1 class="post-header">{{ title }}</h1>
  
  <div class="post-meta">
    <time datetime="{{ page.date | dateFormat }}">{{ page.date | dateFormat }}</time>
    {% if tags %}
      â€¢ 
      {% for tag in tags %}
        {% if tag != "post" %}
          <a href="{{ ('/tags/' + (tag | lowercase) + '/') | url }}" class="tag">{{ tag }}</a>{% if not loop.last %} {% endif %}
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  <!-- Comments section -->
  <div class="post-comments">
    <h2>Comments</h2>
    <div id="cusdis_thread"
      data-host="https://cusdis.com"
      data-app-id="35e740db-8caf-4026-ba4a-1658012691e4"
      data-page-id="{{ page.url }}"
      data-page-url="{{ metadata.url }}{{ page.url }}"
      data-page-title="{{ title }}"
      data-theme="dark"
    ></div>
    <script async defer src="https://cusdis.com/js/cusdis.es.js"></script>
  </div>
  
  <div class="post-navigation">
    <a href="{{ '/' | url }}">> cd ..</a>
  </div>
</article>
